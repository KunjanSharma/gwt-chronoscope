    <scm>
        <connection>scm:svn:http://gwt-chronoscope.googlecode.com/svn/trunk
        </connection>
        <developerConnection>
            scm:svn:https://gwt-chronoscope.googlecode.com/svn/trunk
        </developerConnection>
